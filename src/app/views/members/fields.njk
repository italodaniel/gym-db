<div class="item">
    <div>Avatar URL</div>
        <div>
            <input type="url" name="avatar_url" placeholder="http://..." value="{{ member.avatar_url }}">
        </div>        
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input type="text" name="name" placeholder="Nome do member..." value="{{ member.name }}">
    </div>        
</div>

<div class="item">
    <div>E-mail</div>
    <div>
        <input type="email" name="email" placeholder="E-mail..." value="{{ member.email }}">
    </div>        
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span>
            <input 
                type="radio" 
                name="gender" 
                value="M" 
                    {% if member.gender == "M" %}
                        checked
                    {% endif %}>Masculino
        </span>
        <span>
            <input 
                type="radio" 
                name="gender" 
                value="F"
                    {% if member.gender == "F" %}
                        checked
                    {% endif %}>Feminino
        </span>
    </div>        
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth" value="{{ member.birth }}">
    </div>        
</div>

<div class="item">
    <div>Tipo sanguíneo</div>
    <div>
        <input type="text" name="blood" value="{{ member.blood }}">
    </div>        
</div>


<div class="item">
    <div>Peso (Kg)</div>
    <div>
        <input type="number" name="weight" placeholder="Informe o peso..." value="{{ member.weight }}">
    </div>        
</div>

<div class="item">
    <div>Altura (cm)</div>
    <div>
        <input type="number" name="height" placeholder="Informe a altura em centímetros..." value="{{ member.height }}">
    </div>        
</div>

<button type="submit">Salvar</button>
