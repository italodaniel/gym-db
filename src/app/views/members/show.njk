{% extends "layout.njk" %}

{% block content %}

<div class="card">
    
    <section 
        class="avatar" 
        style="background: url({{ member.avatar_url }}) no-repeat center center / cover">
    </section>
    
    <section class="details">
        <h3>Detalhes</h3>

        <div class="item">
            <div>Nome</div>
            <div>{{ member.name }}</div>        
        </div>

        <div class="item">
            <div>E-mail</div>
            <div>{{ member.email }}</div>        
        </div>
        
        <div class="item">
            <div>Idade</div>
            <div>{{ member.age }}</div>        
        </div>

        <div class="item">
            <div>Aniversário</div>
            <div>{{ member.birthDay }}</div>        
        </div>

        <div class="item">
            <div>Sexo</div>
            <div>{{ "Masculino" if member.gender == "M" else "Feminino" }}</div>
        </div>

        <div class="item">
            <div>Tipo sanguíneo</div>
            <div>{{ member.blood }}</div>        
        </div>

        <div class="item">
            <div>Peso</div>
            <div>{{ member.weight }} Kg</div>
        </div>

        <div class="item">
            <div>Altuta</div>
            <div>{{ member.height }} cm</div>
        </div>

         <div class="item">
            <div>Aluno de</div>
            <div>{{ member.instructor_name }}</div>
        </div>

        <div class="item">
            <div>Desde</div>
            <div>{{ member.created_at }}</div>
        </div>

        <a href="/members/{{ member.id }}/edit" class="button">Editar</a>

    </section>
</div>

{% endblock %}